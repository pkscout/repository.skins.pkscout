<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>

<addon
  id="skin.confluence.gotham.pkscout.mod"
  version="1.0.0"
  name="Confluence Gotham Mods by pkscout"
  provider-name="pkscout|Jezz_X (original), Team XBMC (original)">
  <requires>
    <import addon="xbmc.gui" version="5.0.0"/>
    <import addon="script.module.cmpl" version="1.0.0"/>
  </requires>
  <extension
    point="xbmc.gui.skin"
    defaultthemename="textures.xbt"
    debugging="false"
    effectslowdown="0.75">
    <res width="1280" height="720" aspect="16:9" default="true" folder="720p" />
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Modifications to the default Confluence skin.</summary>
    <description lang="en">This is a set of mods to the default Confluence skin.  Please see the changelog for a detailed list of the modifications.</description>
    <disclaimer lang="en">These mods are only lightly supported.</disclaimer>
    <platform>all</platform>
  </extension>
</addon>

<addon id="script.module.cmpl"
       name="Extra Language Strings for pkscout's Confluence Mod"
       version="1.0.0"
       provider-name="pkscout">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.module" library="default.py" />
  <extension point="xbmc.addon.metadata">
    <summary>Extra Language Strings</summary>
    <description>This is a set of extra language strings for the Confluence mod from the pkscout skin repo. This module should be automatically downloaded when you download the modified skin.</description>
    <platform>all</platform>
    <language></language>
    <license></license>
    <forum></forum>
    <website></website>
    <source></source>
    <email></email>
  </extension>
</addon>

</addons>
